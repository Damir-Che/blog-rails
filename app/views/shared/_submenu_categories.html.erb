<ul class="nav nav-pills nav-stacked nested_nav">
  <% categories.each do |category, children| %> <!-- categories- переданная переменная(дети) из _submenu -->
    <li>
      <!-- кнопка стветиться если адрес url совпадает с текущей -->
      <%= link_to category.name, category, class: "nav-link #{'active' if current_page?(category_path(category))}" %>
      <%= render 'shared/submenu_categories', categories: children if children.present? %>

    </li>
  <% end %>
</ul>